{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"overrides": [
		{
			"include": [
				"**/*.mock.ts",
				"**/*.mock.tsx",
				"**/*.testdata.ts",
				"**/*.testdata.tsx",
				"**/*.tests.ts",
				"**/*.tests.tsx"
			],
			"linter": {
				"rules": {
					"complexity": {
						"noExcessiveCognitiveComplexity": {
							"level": "error",
							"options": {
								"maxAllowedComplexity": 2
							}
						}
					}
				}
			}
		}
	]
}
