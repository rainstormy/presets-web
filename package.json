{
	"$schema": "https://json.schemastore.org/package.json",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build.dist": "yarn workspaces foreach --all --parallel run build.dist",
		"build.pack": "yarn workspaces foreach --all --parallel run build.pack",
		"setup": "yarn install && simple-git-hooks",
		"validate": "concurrently 'yarn:validate.types' 'yarn:validate.format' 'yarn:validate.lint' --group --names 'types','format','lint' --prefix-colors 'blue.bold','magenta.bold','cyan.bold'",
		"validate.fix": "yarn run validate.lint.fix && yarn run validate.format.fix",
		"validate.format": "        prettier './.vscode/**/*.json' './packages/*/*.{json,ts}' './*.config.{js,ts}' './*.d.ts' './*.{json,yml}' --log-level warn --cache --check",
		"validate.format.fix": "    prettier './.vscode/**/*.json' './packages/*/*.{json,ts}' './*.config.{js,ts}' './*.d.ts' './*.{json,yml}' --log-level warn --cache         --list-different --write",
		"validate.format.nocache": "prettier './.vscode/**/*.json' './packages/*/*.{json,ts}' './*.config.{js,ts}' './*.d.ts' './*.{json,yml}' --log-level warn         --check",
		"validate.lint": "        eslint './packages/*/*.ts' './*.config.{js,ts}' './*.d.ts' --max-warnings 0 --cache --cache-location './node_modules/.cache/eslint/'",
		"validate.lint.fix": "    eslint './packages/*/*.ts' './*.config.{js,ts}' './*.d.ts' --max-warnings 0 --cache --cache-location './node_modules/.cache/eslint/' --fix",
		"validate.lint.nocache": "eslint './packages/*/*.ts' './*.config.{js,ts}' './*.d.ts' --max-warnings 0",
		"validate.types": "        tsc --incremental --tsBuildInfoFile './node_modules/.cache/typescript/.tsbuildinfo'",
		"validate.types.nocache": "tsc"
	},
	"simple-git-hooks": {
		"pre-commit": "yarn run concurrently 'yarn:validate.types' 'yarn:validate.format' 'yarn:validate.lint' --group --names 'types','format','lint' --prefix-colors 'blue.bold','magenta.bold','cyan.bold'"
	},
	"devDependencies": {
		"@rainstormy/preset-eslint-base": "workspace:*",
		"@rainstormy/preset-prettier-base": "workspace:*",
		"concurrently": "8.2.2",
		"eslint": "8.53.0",
		"prettier": "3.0.3",
		"simple-git-hooks": "2.9.0",
		"typescript": "5.2.2"
	},
	"packageManager": "yarn@4.0.1",
	"//": {
		"scripts": {
			"validate.fix": "The formatter must run after the linter to resolve potential formatting issues introduced by the linter."
		},
		"devDependencies": {
			"@rainstormy/preset-eslint-base": "A predefined ESLint configuration for web projects.",
			"@rainstormy/preset-prettier-base": "A predefined Prettier configuration for web projects.",
			"concurrently": "A tool that executes multiple Yarn script commands in parallel.",
			"eslint": "A static program analysis tool that uncovers code issues.",
			"prettier": "An opinionated code formatter.",
			"simple-git-hooks": "A tool that creates Git hooks from Yarn script commands.",
			"typescript": "A statically typed programming language that extends the JavaScript syntax."
		}
	}
}
